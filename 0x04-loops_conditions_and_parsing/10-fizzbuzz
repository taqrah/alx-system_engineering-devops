#!/usr/bin/env bash
# This will display numbers from 1 to 100 in list format.
#  It will display "FizzBuzz" when the number is a multiple of 3 and 5.
#  It will display "Fizz" when the number is a multiple of 3.
#  It will display "Buzz" when the number is a multiple of 5.
#   Otherwise, displays the number.

for num in {1..100}
do
  if (( num % 3 == 0 && num % 5 == 0 ))
  then
    echo "FizzBuzz"
  elif (( num % 3 == 0 ))
  then
    echo "Fizz"
  elif (( num % 5 == 0 ))
  then
    echo "Buzz"
  else
    echo "$num"
  fi
done
